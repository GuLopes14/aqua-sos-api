@page "{id:long}"
@model AquaSOSProject.Pages.PontoDistribuicao.DeleteModel
@{
    ViewData["Title"] = "Excluir Ponto de Distribuição";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir este ponto?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Ponto.Id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Ponto.Nome</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Ponto.Endereco</dd>

        <dt class="col-sm-2">Cidade</dt>
        <dd class="col-sm-10">@Model.Ponto.Cidade</dd>

        <dt class="col-sm-2">Capacidade</dt>
        <dd class="col-sm-10">@Model.Ponto.CapacidadeTotalLitros</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Ponto.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
