@page
@model AquaSOSProject.Pages.PedidoAgua.IndexModel
@{
    ViewData["Title"] = "Lista de Pedidos de Água";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Pedido</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Ponto de Distribuição</th>
            <th>Quantidade (Litros)</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Pedidos != null && Model.Pedidos.Count > 0)
        {
            foreach (var item in Model.Pedidos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Usuario?.Nome</td>
                    <td>@item.PontoDistribuicao?.Nome</td>
                    <td>@item.QuantidadeLitros</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Nenhum pedido encontrado.</td>
            </tr>
        }
    </tbody>
</table>
