@page "{id:long}"
@model AquaSOSProject.Pages.PedidoAgua.DeleteModel
@{
    ViewData["Title"] = "Excluir Pedido de Água";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir este pedido?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Pedido.Id</dd>

        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">@Model.Pedido.Usuario?.Nome</dd>

        <dt class="col-sm-2">Ponto de Distribuição</dt>
        <dd class="col-sm-10">@Model.Pedido.PontoDistribuicao?.Nome</dd>

        <dt class="col-sm-2">Litros</dt>
        <dd class="col-sm-10">@Model.Pedido.QuantidadeLitros</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Pedido.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Pedido.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
